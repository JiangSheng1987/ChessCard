{
  "extends": "airbnb",
  "env":{
    "node":true,
    "es6":true
  },
  "rules": {
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "brace-style": 0,
    "max-len": 0,
    "indent": ["error", 4],
    "arrow-body-style": ["error", "always"],
    "no-restricted-syntax": 0,
    "guard-for-in": 0,
    "key-spacing": 0,
    "comma-dangle": 0
  },
  "globals": {
    "window": true,
    "Global": true,
    "WebSocketManager": true,
    "Tools": true,
    "Animation": true,
    "HttpRequestManager": true,
    "proto": true,
    "WebSocket": true,
    "clone": true,
    "md5": true,
    "cc": true,
    "gl": true,
    "CC_JSB": true,
    "jsb": true
  }
}